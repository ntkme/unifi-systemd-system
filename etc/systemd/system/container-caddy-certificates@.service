[Unit]
Description=Caddy cerfiticates service
After=%N.path
Requires=%N.path
ConditionPathIsDirectory=/mnt/data/var/lib/caddy/certificates

[Service]
ExecStart=/usr/bin/podman run --rm --name caddy-certificates --net host --volume /mnt/data/var/lib/caddy/certificates:/var/lib/caddy/certificates:ro --volume /mnt/data/ssh/id_rsa:/root/.ssh/id_rsa:ro --volume /var/run/ssh_proxy_port:/etc/unifi-os/ssh_proxy_port:ro --volume /mnt/data/unifi-os:/data:rw --entrypoint /bin/sh docker.io/ntkme/unifi-ssh-proxy -c 'cd "$(find /var/lib/caddy/certificates -mindepth 2 -maxdepth 2 -type d -name %i -print -quit)" && test -f %i.crt -a -f %i.key && if ! cmp -s %i.crt /data/unifi-core/config/unifi-core.crt || ! cmp -s %i.key /data/unifi-core/config/unifi-core.key; then cp %i.crt /data/unifi-core/config/unifi-core.crt && cp %i.key /data/unifi-core/config/unifi-core.key && /sbin/ssh-proxy "openssl pkcs12 -export -inkey /data/unifi-core/config/unifi-core.key -in /data/unifi-core/config/unifi-core.crt -out /data/unifi/data/keystore -name unifi -passout pass:aircontrolenterprise && nohup unifi-os restart >/dev/null 2>&1 &"; fi'
Type=oneshot

[Install]
WantedBy=multi-user.target
